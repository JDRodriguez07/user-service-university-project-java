# Password for MySQL root user (example, change it)
MYSQL_ROOT_PASSWORD=CHANGE_ROOT_PASSWORD

# Database name used by the microservice
DB_NAME=user-microservice-db

# Non-root database user (matches Dockerfile)
DB_USERNAME=user_service_user
DB_PASSWORD=CHANGE_DB_PASSWORD

# ======================================================
# JWT Configuration (EXAMPLE VALUES — DO NOT USE)
# ======================================================

# Example secret (must be changed in your local .env)
JWT_SECRET=CHANGE_JWT_SECRET

# Default: 24 hours (in milliseconds)
JWT_EXPIRATION_MS=86400000
